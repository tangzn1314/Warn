<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/progress_loading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="@dimen/common_dp_25"
    android:paddingTop="@dimen/common_dp_25">

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="@dimen/common_loading_size"
        android:layout_height="@dimen/common_loading_size"
        android:layout_gravity="center"
        android:src="@drawable/common_loading"
        tools:ignore="ContentDescription"/>

</FrameLayout>