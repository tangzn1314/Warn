<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/common_no_data"
        android:textColor="@color/common_font_gray_6"
        android:textSize="@dimen/common_font_size_default"
        tools:ignore="SpUsage" />

    <View
        android:id="@+id/v_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/tv_message"
        android:layout_centerHorizontal="true"
        android:background="@drawable/common_icon_no_data"/>

</RelativeLayout>